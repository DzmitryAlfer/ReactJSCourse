{
    "extends": [
        "eslint:recommended",
		"airbnb"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    },
  "plugins": ["react"],
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true
    },
  "rules":{
    "import/no-extraneous-dependencies": "off",
    "linebreak-style": ["error", "windows"],
    "indent": ["warn", 4, { "SwitchCase": 1 }],
    "import/prefer-default-export": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-indent": 1,
    "react/jsx-uses-vars": 1,
    "react/react-in-jsx-scope": 1,
    "max-len": [2, 121, 4, {"ignoreUrls": true, "ignoreComments": true}]
  }
}
